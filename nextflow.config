// nextflow.config - Much simpler
profiles {
    slurm {
        process.executor = 'slurm'
        process.clusterOptions = '--account=your_account'
        conda.enabled = true
    }
    
    local {
        process.executor = 'local'
        conda.enabled = true
        process.cpus = 2
        process.memory = '8.GB'
        process.time = '30.m'
        // Remove cluster-specific directives
        process.queue = null
        process.clusterOptions = null
    }
}

// Global conda
conda {
    enabled = true
    useMamba = true
}